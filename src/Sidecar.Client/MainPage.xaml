<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:viewModels="clr-namespace:Sidecar.Client.ViewModels"
             x:Class="Sidecar.Client.MainPage"
             x:DataType="viewModels:MainPageViewModel"
             BackgroundColor="#121212">

    <Grid>
        <!-- 映像レイヤー -->
        <skia:SKCanvasView x:Name="CanvasView"
                           PaintSurface="OnCanvasViewPaintSurface"
                           IgnorePixelScaling="True" />

        <!-- 接続前UIレイヤー -->
        <Grid IsVisible="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}"
              RowDefinitions="*,Auto,*"
              BackgroundColor="#121212">
            
            <VerticalStackLayout Grid.Row="1" Spacing="24" HorizontalOptions="Center" WidthRequest="360">
                <Label Text="Sidecar" 
                       FontSize="48" 
                       TextColor="White" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSansSemibold"/>
                
                <Label Text="Remote Display Client" 
                       FontSize="16" 
                       TextColor="#808080" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,-12,0,32"
                       CharacterSpacing="1"/>

                <!-- ホストアドレスとポート入力 -->
                <Grid ColumnDefinitions="2*,*"
                      ColumnSpacing="12">
                    <Border Grid.Column="0"
                            StrokeShape="RoundRectangle 16" 
                            Stroke="Transparent" 
                            BackgroundColor="#252525" 
                            Padding="16,8">
                        <Entry Placeholder="ホストIPアドレス (例: 192.168.1.100)"
                               Text="{Binding HostAddress}"
                               IsEnabled="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               Keyboard="Url" />
                    </Border>

                    <Border Grid.Column="1"
                            StrokeShape="RoundRectangle 16" 
                            Stroke="Transparent" 
                            BackgroundColor="#252525" 
                            Padding="16,8">
                        <Entry Placeholder="ポート"
                               Text="{Binding Port}"
                               IsEnabled="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               Keyboard="Numeric" />
                    </Border>
                </Grid>

                <!-- カラーモード選択 -->
                <Grid ColumnDefinitions="*,2*"
                      ColumnSpacing="12">
                    <Label Grid.Column="0"
                           Text="カラーモード:"
                           VerticalOptions="Center"
                           TextColor="White"/>
                    
                    <Picker Grid.Column="1"
                            ItemsSource="{Binding ColorModeOptions}"
                            ItemDisplayBinding="{Binding DisplayName}"
                            SelectedItem="{Binding SelectedColorModeOption}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            Title="モードを選択"
                            BackgroundColor="#252525"
                            TitleColor="#666666"/>
                </Grid>
                
                <!-- Sliders -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Saturation, StringFormat='Saturation: {0:F2}'}" TextColor="White" FontSize="12"/>
                    <Slider Value="{Binding Saturation}" Minimum="0" Maximum="3" />
                    
                    <Label Text="{Binding Contrast, StringFormat='Contrast: {0:F2}'}" TextColor="White" FontSize="12"/>
                    <Slider Value="{Binding Contrast}" Minimum="0" Maximum="3" />
                    
                    <Label Text="{Binding Brightness, StringFormat='Brightness: {0:F2}'}" TextColor="White" FontSize="12"/>
                    <Slider Value="{Binding Brightness}" Minimum="-1" Maximum="1" />
                    
                    <Button Text="Reset Sliders" 
                            Command="{Binding ResetSlidersCommand}"
                            HeightRequest="30"
                            Padding="0"
                            FontSize="10"
                            BackgroundColor="#444444" 
                            TextColor="White" />
                </VerticalStackLayout>

                <Button Text="Connect" 
                        Command="{Binding ConnectCommand}" 
                        BackgroundColor="#007AFF" 
                        TextColor="White" 
                        CornerRadius="24" 
                        HeightRequest="56" 
                        FontAttributes="Bold"
                        FontSize="16"
                        IsEnabled="{Binding IsNotConnecting}">
                    <Button.Shadow>
                        <Shadow Brush="#007AFF" Offset="0,4" Radius="10" Opacity="0.3"/>
                    </Button.Shadow>
                </Button>
                
                <Label Text="{Binding StatusMessage}" 
                       TextColor="#FF453A" 
                       HorizontalTextAlignment="Center"
                       FontSize="14"/>
            </VerticalStackLayout>
        </Grid>

        <!-- 接続中オーバーレイUI (タップで表示切り替え) -->
        <Grid IsVisible="{Binding IsConnected}" 
              InputTransparent="False">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </Grid.GestureRecognizers>
             
            <!-- コントロールコンテナ -->
            <Grid x:Name="ControlsOverlay" 
                  Opacity="0" 
                  InputTransparent="True" 
                  RowDefinitions="Auto,*,Auto">
                
                <!-- ヘッダー -->
                <Border Grid.Row="0" 
                        BackgroundColor="#CC1C1C1E" 
                        Padding="24,16" 
                        StrokeThickness="0"
                        VerticalOptions="Start">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="{Binding StatusMessage}" 
                               TextColor="White" 
                               FontSize="14"
                               VerticalOptions="Center"/>
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <BoxView Color="#32D74B" WidthRequest="8" HeightRequest="8" CornerRadius="4" VerticalOptions="Center"/>
                            <Label Text="Live" TextColor="#32D74B" FontSize="12" FontAttributes="Bold" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- フッター -->
                <Border Grid.Row="2" 
                        BackgroundColor="#CC1C1C1E" 
                        Padding="24,32" 
                        StrokeThickness="0"
                        VerticalOptions="End">
                    <Button Text="Disconnect" 
                            Command="{Binding DisconnectCommand}" 
                            BackgroundColor="#FF453A" 
                            TextColor="White" 
                            CornerRadius="24"
                            HeightRequest="48"
                            WidthRequest="160"
                            HorizontalOptions="Center"
                            FontAttributes="Bold"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
